<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <include
        android:id="@+id/llyt_title_bar"
        layout="@layout/common_title_bar"/>

    <ImageView
        android:id="@+id/iv_settings_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_app"
        android:layout_below="@id/llyt_title_bar"
        android:layout_marginTop="42dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/tv_settings_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:layout_below="@id/iv_settings_logo"
        android:text="@string/app_name"
        android:textSize="18sp"
        android:textColor="@color/color_text_black_33"/>

    <TextView
        android:id="@+id/tv_settings_version_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/tv_settings_app_name"
        android:gravity="center"
        android:text="@string/version_code"
        android:textSize="14sp"
        android:textColor="@color/color_666666"/>

    <TextView
        android:id="@+id/tv_settings_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="@string/copy_right"
        android:layout_marginBottom="60dp"
        android:textSize="13sp"
        android:textColor="@color/color_999999"/>

</RelativeLayout>