<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageView
            android:id="@+id/iv_live_face_pic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_default_pic"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tv_live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:shadowColor="#54050202"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="3.0"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_FFFFFF"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_live_title"
                android:layout_marginTop="4dp">

                <com.benben.commoncore.widget.CircleImageView
                    android:id="@+id/civ_user_photo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_default_header" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/iv_play_icon"
                    android:layout_toRightOf="@id/civ_user_photo"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:shadowColor="#54050202"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3.0"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/text_white"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_play_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/tv_bofang_cishu"
                    android:src="@mipmap/icon_camera" />

                <TextView
                    android:id="@+id/tv_bofang_cishu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLength="6"
                    android:shadowColor="#54050202"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3.0"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>