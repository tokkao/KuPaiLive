<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/relayout_live_anchor"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@drawable/switch_sex_track_on" />

        <cn.qssq666.giftmodule.ui.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_default_avatar" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2.0dip"
            android:layout_toRightOf="@+id/iv_head"
            android:ellipsize="end"
            android:maxWidth="80.0dip"
            android:maxLength="9"
            android:minWidth="4.0dip"
            android:singleLine="true"
            android:text="情随事ffffff迁"
            android:textColor="@color/color_FFFFFF"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/gift_1" />

    </RelativeLayout>


    <cn.qssq666.giftmodule.ui.StrokeTextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/relayout_live_anchor"
        android:gravity="center_vertical"
        android:text="x1"
        android:textColor="#F5C55E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:borderColor="@android:color/holo_red_dark" />
</RelativeLayout>