<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:background="@drawable/shape_white_radius10_ffffff"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:background="@mipmap/img_jingqingqidai" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:gravity="center_horizontal"
            android:text="@string/stay_tuned"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />


        <Button
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"

            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_marginRight="47dp"
            android:layout_marginLeft="47dp"
            android:background="@drawable/shape_red_radius17_ff6261"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/affirmance"
            android:textColor="@color/color_FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>