<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlyt_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/ll_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_top_black_radius10_e5000000"
        android:orientation="vertical"
        android:paddingBottom="44dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/report"
            android:textColor="@color/color_FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_report_list"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </androidx.recyclerview.widget.RecyclerView>

        <EditText
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="25dp"
            android:gravity="top"
            android:text=""
            android:background="@drawable/shape_black_radius5_333333"
            android:hint="@string/else_want_to_say"
            android:padding="15dp"
            android:textColor="@color/color_FFFFFF"
            android:textColorHint="@color/color_999999"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_top_black_radius6_2e2d2c"
        android:text="@string/confirm"
        android:textColor="@color/color_FF6261"
        android:textSize="15sp" />

</RelativeLayout>