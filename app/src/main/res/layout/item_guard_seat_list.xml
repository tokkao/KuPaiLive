<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clipChildren="true">

        <com.benben.commoncore.widget.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@mipmap/icon_default_avatar"/>

        <ImageView
            android:id="@+id/iv_guard_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_gold_guard"
            android:layout_marginLeft="34dp"
            android:layout_alignBottom="@id/civ_avatar"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="昵称"
            android:maxEms="3"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color_1A1A1A"
            android:textSize="14sp" />
    </RelativeLayout>


</LinearLayout>